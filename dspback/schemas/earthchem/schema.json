              "type": "string",
              "default": "Creative Commons Attribution-NonCommercial-Share Alike 3.0 United States"
            },
            "alternateName": {
              "type": "string",
              "default": "CC-BY-NC-SA-3.0",
              "const": "CC-BY-NC-SA-3.0",
              "options": { "hidden": true }
            },
            "identifiers": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "Identifier",
                "properties": {
                  "scheme": {
                    "type": "string",
                    "default": "SPDX"
                  },
                  "schemeURI": {
                    "type": "string",
                    "default": "https://spdx.org/licenses/"
                  },
                  "identifier": {
                    "type": "string",
                    "default": "CC-BY-NC-SA-3.0"
                  },
                  "url": {
                  "type": "string",
                  "default": "https://spdx.org/licenses/CC-BY-NC-SA-3.0",
                  "format": "uri"
                  }
                }
              }
            }
