              "default": "CC-BY-4.0",
              "const": "CC-BY-4.0",
              "options": { "hidden": true }
            },
            "identifiers": {
              "type": "array",
              "items": {
                "type": "object",
                "title": "Identifier",
                "properties": {
                  "scheme": {
                    "type": "string",
                    "default": "SPDX"
                  },
                  "schemeURI": {
                    "type": "string",
                    "default": "https://spdx.org/licenses/"
                  },
                  "identifier": {
                    "type": "string",
                    "default": "CC-BY-4.0"
                  },
                  "url": {
                  "type": "string",
                  "default": "https://spdx.org/licenses/CC-BY-4.0",
