              },
              {
                "const": "isPreviousVersionOf",
                "title": "is new version of this upload"
              },
              {
                "const": "isPartOf",
                "title": "has this upload as part"
              },
              {
                "const": "hasPart",
                "title": "is part of this upload"
              },
              {
                "const": "isReferencedBy",
                "title": "references this upload"
              },
              {
                "const": "references",
