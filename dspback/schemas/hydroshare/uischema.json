{
  "type": "VerticalLayout",
  "elements": [
    { 
      "type": "Group",
      "label": "Basic Information",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/title"
        },
        {
          "type": "Control",
          "scope": "#/properties/abstract",
          "options": {
            "multi": true
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/subjects"
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/creators"
    },
    {
      "type": "Control",
      "scope": "#/properties/contributors"
    },
    {
      "type": "Control",
      "label": "Spatial coverage",
      "scope": "#/properties/spatial_coverage"
    },
    {
      "type": "Control",
      "label": "Period coverage",
      "scope": "#/properties/period_coverage"
    },
    {
      "type": "Control",
      "scope": "#/properties/additional_metadata"
    },
    {
      "type": "Control",
      "scope": "#/properties/relations"
    },
    {
      "type": "Control",
      "scope": "#/properties/awards"
    },
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Group",
          "label": "Rights",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/rights/properties/license"
            },
            {
              "type": "Control",
              "scope": "#/properties/rights/properties/statement",
              "rule": {
                "effect": "ENABLE",
                "condition": {
                  "scope": "#/properties/rights/properties/license",
                  "schema": {
                    "enum": [
                      "other"
                    ]
                  }
                }
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/rights/properties/url",
              "rule": {
                "effect": "ENABLE",
                "condition": {
                  "scope": "#/properties/rights/properties/license",
                  "schema": {
                    "enum": [
                      "other"
                    ]
                  }
                }
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/citation",
      "rule": {
        "effect": "DISABLE",
        "condition": {
          "scope": "#/properties/citation"
        }
      }
    }
  ]
}