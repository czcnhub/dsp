{
  "type": "VerticalLayout",
  "elements": [
    { 
      "type": "Group",
      "label": "Basic Information",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/title"
        },
        {
          "type": "Control",
          "scope": "#/properties/abstract",
          "options": {
            "multi": true
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/subjects"
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/creators"
    },
    {
      "type": "Control",
      "scope": "#/properties/contributors"
    },
    {
      "type": "Control",
      "label": "Spatial coverage",
      "scope": "#/properties/spatial_coverage"
    },
    {
      "type": "Group",
      "label": "Period coverage",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/definitions/PeriodCoverage/properties/name"
            },
            {
              "type": "Control",
              "scope": "#/definitions/PeriodCoverage/properties/start"
            },
            {
              "type": "Control",
              "scope": "#/definitions/PeriodCoverage/properties/end"
            }
          ]
        }        
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/additional_metadata"
    },
    {
      "type": "Control",
      "scope": "#/properties/relations"
    },
    {
      "type": "Control",
      "scope": "#/properties/awards"
    },
    {
      "type": "Group",
      "label": "Rights",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/definitions/rights/properties/statement"
            },
            {
              "type": "Control",
              "scope": "#/definitions/rights/properties/url"
            }
          ]
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/citation",
      "rule": {
        "effect": "DISABLE",
        "condition": {
          "scope": "#/properties/citation"
        }
      }
    }
  ]
}